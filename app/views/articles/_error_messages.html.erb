<% if @article.errors.any? %>
    <div id="error_explanation">
        <span>The form contains <%= pluralize @article.errors.count, "error" %>.</span>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>