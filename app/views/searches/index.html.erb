<table id="searches_table">
    <thead>
        <tr>
            <th id="query_header">Query</th>
            <th id="ip_address_header">IP Address</th>
        </tr>
    </thead>
    <tbody>
        <% if @searches.empty? %>
            <tr>
                <td colspan=2>No queries available</td>
            </tr>
        <% else %>
            <% @searches.each do |s| %>
                <tr id="<%= s.id %>">
                    <td><%= s.query %></td>
                    <td class="ip_address_column"><%= s.ip_address %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>